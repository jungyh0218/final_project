<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="안녕?"
        android:textColor="#000000"
        android:textSize="30dp"
        android:id="@+id/textViewTitleAnswer" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 |"
            android:textColor="#bcbcbc"
            android:id="@+id/textViewIdAnswer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2015.12.20"
            android:textColor="#bcbcbc"
            android:id="@+id/textViewTimeAnswer" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#000000"
        android:text="인사입니다."
        android:id="@+id/textViewContentAnswer" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="0 추천"
            android:textColor="#979797"
            android:background="@drawable/vote"
            android:id="@+id/buttonVoteAnswer" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/like"
            android:id="@+id/buttonLikeAnswer" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/unlike"
            android:id="@+id/buttonUnlikeAnswer" />

    </LinearLayout>
</LinearLayout>